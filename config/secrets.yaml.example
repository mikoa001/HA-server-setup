# Example Secrets File
# This file should contain sensitive information and should never be committed to git
# Add secrets.yaml to .gitignore

# Location coordinates (used in configuration.yaml)
latitude: 59.9139
longitude: 10.7522
elevation: 10

# Database connection (if using external database)
db_url: mysql://homeassistant:password@localhost/homeassistant

# API Keys
weather_api_key: your_weather_api_key_here
openai_api_key: your_openai_api_key_here

# MQTT Broker
mqtt_broker: localhost
mqtt_username: homeassistant
mqtt_password: your_mqtt_password_here

# External URLs
external_url: https://yourdomain.duckdns.org
internal_url: http://192.168.1.100:8123

# Zigbee2MQTT
z2m_network_key: your_zigbee_network_key_here

# Trusted networks
trusted_network_1: 192.168.1.0/24

# HTTP settings
http_password: your_secure_password_here
